				var img = new Image();
				img.onload = function() {
					var ctx = canvas.getContext("2d");
					ctx.drawImage(img, 0, 0, 32, 32);
					ctx.font = "12px sans-serif";
					ctx.fillText("/SiteIcon", 0, 16, 0);
